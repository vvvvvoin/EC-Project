<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/round_border3"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".auth.SignUpActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp"
            android:paddingHorizontal="5dp"
            android:text="아이디"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/signup_id_EditText"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/round_border3"
            android:hint="oh_jimmy@hyperion.com"
            android:inputType="textEmailAddress"
            android:paddingHorizontal="10dp"
            android:singleLine="true"
            android:textColorHint="#4D000000"
            android:textCursorDrawable="@color/ComponetPrimaryColor"
            android:textSize="21sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:paddingHorizontal="5dp"
            android:text="닉네임"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/signup_nickname_EditText"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/round_border3"
            android:hint="raynor"
            android:inputType="textEmailAddress"
            android:paddingHorizontal="10dp"
            android:singleLine="true"
            android:textColorHint="#4D000000"
            android:textCursorDrawable="@color/ComponetPrimaryColor"
            android:textSize="21sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:paddingHorizontal="5dp"
            android:text="비밀번호"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/signup_password_EditText"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/round_border3"
            android:hint="*****"
            android:inputType="textPassword"
            android:paddingHorizontal="10dp"
            android:singleLine="true"
            android:textColorHint="#4D000000"
            android:textCursorDrawable="@color/ComponetPrimaryColor"
            android:textSize="21sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:paddingHorizontal="5dp"
            android:text="비밀번호 확인"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/signup_password2_EditText"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/round_border3"
            android:hint="*****"
            android:inputType="textPassword"
            android:paddingHorizontal="10dp"
            android:singleLine="true"
            android:textColorHint="#4D000000"
            android:textCursorDrawable="@color/ComponetPrimaryColor"
            android:textSize="21sp" />

        <Button
            android:id="@+id/signup_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:text="가입하기" />


    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.686" />


</androidx.constraintlayout.widget.ConstraintLayout>